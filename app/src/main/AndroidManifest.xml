<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Required permissions for internet access and network state -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/africarising1"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true"
        tools:targetApi="31">
        
        <!-- Main Activity - Launcher -->
        <activity 
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <!-- Menu Selection Activity -->
        <activity 
            android:name=".MenuSelection"
            android:exported="false"
            android:parentActivityName=".MainActivity" />
        
        <!-- Agronomy Activity -->
        <activity
            android:name=".AgronomyActivity"
            android:exported="false"
            android:label="@string/title_activity_agronomy"
            android:parentActivityName=".MenuSelection"
            android:theme="@style/AppTheme.NoActionBar" />
        
        <!-- Climate/Weather Activity -->
        <activity 
            android:name=".ClimateActivity"
            android:exported="false"
            android:label="@string/title_activity_climate"
            android:parentActivityName=".MenuSelection" />
        
        <!-- Market Price Activity -->
        <activity 
            android:name=".PriceActivity"
            android:exported="false"
            android:label="@string/title_activity_price"
            android:parentActivityName=".MenuSelection" />
    </application>

</manifest>
